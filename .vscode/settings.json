{
  "mcp.servers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "description": "üé≠ E2E test generation & browser automation (TIER 1 - ESSENTIAL)"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "üêô Code review & PR management (TIER 1 - ESSENTIAL)",
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "gitlab": {
      "command": "npx",
      "args": ["-y", "gitlab-mcp-server"],
      "description": "ü¶ä GitLab CI/CD & repo management (TIER 2 - HIGH VALUE)",
      "env": {
        "GITLAB_PERSONAL_ACCESS_TOKEN": "${env:GITLAB_PERSONAL_ACCESS_TOKEN}",
        "GITLAB_API_URL": "${env:GITLAB_API_URL}"
      }
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "slack-mcp-server"],
      "description": "üí¨ Team notifications & communication (TIER 2 - HIGH VALUE)",
      "env": {
        "SLACK_BOT_TOKEN": "${env:SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${env:SLACK_TEAM_ID}"
      }
    },
    "jira": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-jira"],
      "description": "üìã Issue tracking & project management (TIER 2 - HIGH VALUE)",
      "env": {
        "JIRA_URL": "${env:JIRA_URL}",
        "JIRA_EMAIL": "${env:JIRA_EMAIL}",
        "JIRA_API_TOKEN": "${env:JIRA_API_TOKEN}"
      },
    "miro": {
      "command": "npx",
      "args": ["-y", "miro-mcp-server"],
      "description": "üé® Visual collaboration & design workflows (TIER 3 - STRATEGIC)",
      "env": {
        "MIRO_ACCESS_TOKEN": "${env:MIRO_ACCESS_TOKEN}",
        "MIRO_TEAM_ID": "${env:MIRO_TEAM_ID}"
      }
       
      }
    },
    "confluence": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-confluence"],
      "description": "üìö Documentation & knowledge management (TIER 2 - HIGH VALUE)",
      "env": {
        "CONFLUENCE_URL": "${env:CONFLUENCE_URL}",
        "CONFLUENCE_EMAIL": "${env:CONFLUENCE_EMAIL}",
        "CONFLUENCE_API_TOKEN": "${env:CONFLUENCE_API_TOKEN}"
      }
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "description": "üêò PostgreSQL database management (TIER 3 - STRATEGIC)",
      "env": {
        "POSTGRES_CONNECTION_STRING": "${env:POSTGRES_CONNECTION_STRING}"
      }
    }
  }
}

