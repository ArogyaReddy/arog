{
  "name": "arog-automation-framework",
  "version": "1.0.0",
  "description": "AROG - Autonomous Robot for Organization Growth. Complete automation framework with AI agents, workflows, and testing.",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:a11y": "playwright test tests/accessibility/",
    "lint": "eslint src tests --ext .js,.ts",
    "lint:fix": "eslint src tests --ext .js,.ts --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "perf:lighthouse": "lhci autorun",
    "build": "webpack && tsc",
    "build:check": "tsc --noEmit",
    "build:size": "node scripts/check-bundle-size.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\"",
    "validate": "npm run lint && npm run typecheck && npm test && npm run build",
    "docs:serve": "npx http-server docs -p 8080",
    "arog:health": "node scripts/health-check.js",
    "arog:setup": "node scripts/setup.js",
    "arog:validate": "node scripts/validate-system.js"
  },
  "keywords": [
    "automation",
    "testing",
    "ai-agents",
    "workflows",
    "bots",
    "ci-cd",
    "arog"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "axe-playwright": "^2.0.1",
    "babel-loader": "^9.1.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YourOrg/AROG.git"
  }
}
